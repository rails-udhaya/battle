  <%= render :partial => "/common/admin/title_bar.html" , :locals => {:titles => "Dashboard"} %>
		
<div class="without_sidebar" id="active_admin_content">
        <div id="main_content_wrapper">
          <div id="main_content">
            <div class="columns">
              <div style="width: 49.0%; margin-right: 2%;" class="column">
                <div class="panel">
                  <h3>Recent Challenges</h3>
                  <div class="panel_contents">
                    <table border="0" cellspacing="0" cellpadding="0">
                      <thead>
                        <tr>
                          <th class="">Title</th>
                          <th class="">Asset Image</th>
                          <th class="">Skill</th>
                        </tr>
                      </thead>
                      <tbody>
																														<%if !@challenges.blank? %>
																						<%@challenges.each_with_index do |challenge|%>
																										<tr id="user_101" class="odd">
																												<td class=""><a href="#"><%=challenge.title.blank? ? "" : challenge.title%></a></td>
																												<td class=""> <img src="<%=challenge.asset.url(:thumb)%>" style="width:100%;height:100%"/></td>
																												<td class=""> <%=challenge.skills.blank? ? "No skills" : challenge.skills%></td>
																										</tr>						
																								<%end%>
																								<%else%>
																										<tr id="user_101" class="odd">
																															<td>	No data Found</td>
																												</tr>
																								<%end%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div style="width: 49.0%;" class="column">
                <div class="panel">
                  <h3>Recent Users</h3>
                  <div class="panel_contents">
                    <table border="0" cellspacing="0" cellpadding="0">
                      <thead>
                        <tr>
                          <th class="">Email</th>
                          <th class="">Name</th>
                        </tr>
                      </thead>
                      <tbody>
																						<%if !@users.blank? %>
																						<%@users.each_with_index do |user|%>
																										<tr id="user_101" class="odd">
																												<td class=""><a href="#"><%=user.email.blank? ? "" : user.email%></a></td>
																												<td class=""> <%=user.name.blank? ? "No Name" : user.name%></td>
																										</tr>						
																								<%end%>
																								<%else%>
																										<tr id="user_101" class="odd">
																															<td>	No data Found</td>
																												</tr>
																								<%end%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            <div style="clear:both;"></div></div>
            <div class="columns">
              <div style="width: 100.0%;" class="column">
                <div class="panel">
                  <h3>Show some data</h3>
                  <div class="panel_contents">
                    <div>Some info<a href="#"></a>.
 
</div>
                    <div>
                      <br><br>

</div>
                  </div>
                </div>
              </div>
            <div style="clear:both;"></div></div>
          </div>
        </div>
      </div>