 
 

<div class="mp-container container-fluid" style="background:url('/assets/linen.png') repeat">
                    <div class="row-fluid">
                        <div class="span12 mp-content" style="padding-top: 15px;">
                            <div class="mp-header header-centered">
                                <h1>Join myCombate</h1>
                                   <!-- <h2>More and More peoples </h2>-->
                            </div>
                            <div class="popup-on-page">
        <section class="popup-new popup-user-forms-new popup-user-register ">
            <header>
                <a rel="nofollow" class="btn-close" href="#"></a>
            </header>
            <div class="popup-content">

         <div class="popup-form">
                                           <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
																																								<div style="margin:0;padding:0;display:inline">
													   <%= f.error_notification %>
																																								</div>
                <div class="form-errors hidden">
                </div>
                <div data-section="1" class="js-form-join-section form-inputs">
                    <div class="form-row cf">
                        <div class="input-wrap">
																								<input type="hidden" name="user[role]" value="user">
    <%= f.input :name, :required => true %>
	    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :required => true %>
    <%= f.input :password_confirmation, :required => true %>
				</br>
				<%=f.check_box :is_subscribed, {:checked=>true}%> Subscribe to myCombate
                        </div>
                    </div>
                </div>
																
																																									        <div class="form-row-buttons cf">
				       <!--<input type="submit" value="Join" tabindex="6" name="commit" id="join-btn" data-toggle-text="Create" class="btn-standard btn-green rf">-->
																								<input class="btn-standard btn-green rf" type="submit" value="Sign up" name="commit">
																								 <%#= f.button :submit, "Sign up" %>
                </div>
 <%end%>
             <small class="toggle-form-action">Already a member? <a class="js-open-popup-login" href="/users/sign_in">Sign In</a></small> 
                </div>
            </div>
        </section>
                            </div>
                        </div>
                    </div>
                </div>
																
 